NAME = school
SRC = main.c school.c
OBJ = main.o school.o
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) -c main.c $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c $(CFLAGS)

clean:
	rm -f *~ \#*\# $(OBJ)

oclean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: clean oclean fclean re

